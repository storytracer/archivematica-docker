# Archivematica Docker Environment Variables
# Copy this file to .env and modify the values before running the container

# =============================================================================
# DATABASE CREDENTIALS (REQUIRED - Change these for production!)
# =============================================================================

# Storage Service Database
SS_DB_NAME=SS_db
SS_DB_USER=ss
SS_DB_PASSWORD=CHANGE_ME_storage_service_password

# Archivematica MCP Server Database
ARCHIVEMATICA_MCPSERVER_CLIENT_DATABASE=archivematica
ARCHIVEMATICA_MCPSERVER_CLIENT_USER=archivematica
ARCHIVEMATICA_MCPSERVER_CLIENT_PASSWORD=CHANGE_ME_mcp_server_password

# =============================================================================
# OPTIONAL: Elasticsearch Configuration
# =============================================================================

# Set to 'false' to run Archivematica in indexless mode (without Elasticsearch)
# ARCHIVEMATICA_DASHBOARD_DASHBOARD_SEARCH_ENABLED=true
# ARCHIVEMATICA_MCPSERVER_MCPSERVER_SEARCH_ENABLED=true
# ARCHIVEMATICA_MCPCLIENT_MCPCLIENT_SEARCH_ENABLED=true